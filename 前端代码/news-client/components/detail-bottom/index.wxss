/* components/detail-bottom/detail-bottom.wxss */

.detail-bottom-wrapper {
    width: 100%;
    position: fixed;
    bottom: 0;
    background-color: white;
    border-top: 1px solid rgb(238, 238, 238);
    display: flex;
    padding: 20rpx 0;
}

.fake-input {
    height: 60rpx;
    font-size: 28rpx;
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(186, 186, 186);
    background-color: rgb(245, 249, 252);
    margin: 0 20rpx;
}

.actions {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 350rpx;
    margin-left: -20rpx;
    /* background-color: azure; */
}

.my-share {
    padding: 0;
    margin: 0;
    height: 31px;
    line-height: unset;
    background: none;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    margin-top: 1px;
}

button::after {
    border: none;
}